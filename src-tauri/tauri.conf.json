{
  "identifier": "com.moss.publisher",
  "productName": "moss",
  "version": "0.1.0",
  "build": {
    "beforeBuildCommand": "npm run frontend:build",
    "beforeDevCommand": "npm run frontend:dev",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "resizable": true,
        "title": "moss",
        "width": 1200,
        "height": 800,
        "visible": false,
        "create": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["moss"]
      }
    }
  },
  "bundle": {
    "active": true,
    "category": "DeveloperTool",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../resources",
      "icons/menu-bar"
    ],
    "longDescription": "Right-click to publish. Keep your content portable.",
    "shortDescription": "Right-click to publish",
    "targets": "all"
  }
}