{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting - Gradual migration settings */
    "strict": false,
    "allowJs": true,
    "checkJs": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    /* Type generation support */
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,

    /* Path aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/bindings": ["./src/bindings.ts"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/bindings.ts"
  ],
  "exclude": [
    "dist",
    "src-tauri/target",
    "node_modules"
  ]
}